{
  "$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
  "extends": ["ultracite"],
  "files": {
    "includes": [
      "**",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/public",
      "!**/.next"
    ]
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off"
      },
      "style": {
        "useBlockStatements": "off",
        "noNestedTernary": "off"
      },
      "correctness": {
        "noUndeclaredVariables": "off"
      },
      "a11y": {
        "useValidAnchor": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "off"
      },
      "nursery": {}
    }
  },
  "javascript": {
    "globals": ["Liveblocks"],
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
